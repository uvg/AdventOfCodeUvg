Part2(FileName="",RecordsArr,NumberOfCycles) PUBLIC
{
	if $get(NumberOfCycles)'?1.n||'$extract($get(NumberOfCycles)) {
		write !,"Wrong number of cycles, bye bye"
		quit 0
	}
	if $data(RecordsArr)'=10 {
		if '$length(FileName) {
			read !,"Enter filename: ",FileName
			write !
		}
		if '$length(FileName) {
			write !,"Missing file to read from"
			quit 0
		}
		quit:'$$LoadFile(FileName,.RecordsArr) 0
		if '$data(RecordsArr) {
			write !,"No data was red from "_FileName
			quit 0
		}
	}
	quit:'$$CheckData(.RecordsArr) 0
	;w !,0,!
	zw RecordsArr
	;w !
	for i=1:1:NumberOfCycles do SetBadLightsOn(.RecordsArr),ComputeNextIter(.RecordsArr) ;w !,i,! zwrite RecordsArr w !
	do SetBadLightsOn(.RecordsArr)
	w !!
	zw RecordsArr
	quit $$HowManyLightsOn(.RecordsArr)
}
SetBadLightsOn(RecordsArr)
{
	set $extract(RecordsArr(1),1)="#"
	set $extract(RecordsArr(1),*)="#"
	set $extract(RecordsArr($order(RecordsArr(""),-1)),1)="#"
	set $extract(RecordsArr($order(RecordsArr(""),-1)),*)="#"
}
CheckData(RecordsArr)
{
	set Line="",Error=""
	for  {
		set Line=$order(RecordsArr(Line)) quit:Line=""
		set Record=RecordsArr(Line)
		if '$length(Record) {
			set Error="No data at line "_Line
			quit
		}
		if $length($translate(Record,"#.")) {
			set Error="Wrong data format at line "_Line
			quit
		}
	}
	if $length(Error) {
		write !,Error
		quit 0
	}
	quit 1
}
LoadFile(FileName,RecordsArr)
{
	kill RecordsArr
	open FileName::.1 if '$test {
		write !,"Error loading file "_FileName
		quit 0
	}
	set EndOfFileSW=$zutil(68,40,1) //$system.Process.SetZEOF(1)
	use FileName
	for Line=1:1 {
		read Record quit:$zeof
		if $length(Record) set RecordsArr(Line)=Record
	}
	close FileName
	if 'EndOfFileSW do $zutil(68,40,0) //$system.Process.SetZEOF(0)
	quit 1
}
