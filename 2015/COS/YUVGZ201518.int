	*/
Part1(FileName="",RecordsArr,NumberOfCycles) PUBLIC
{
	if $get(NumberOfCycles)'?1.n||'$extract($get(NumberOfCycles)) {
		write !,"Wrong number of cycles, bye bye"
		quit 0
	}
	if $data(RecordsArr)'=10 {
		if '$length(FileName) {
			read !,"Enter filename: ",FileName
			write !
		}
		if '$length(FileName) {
			write !,"Missing file to read from"
			quit 0
		}
		quit:'$$LoadFile(FileName,.RecordsArr) 0
		if '$data(RecordsArr) {
			write !,"No data was red from "_FileName
			quit 0
		}
	}
	quit:'$$CheckData(.RecordsArr) 0
	;w !,0,!
	zw RecordsArr
	;w !
	for i=1:1:NumberOfCycles do ComputeNextIter(.RecordsArr) ;w !,i,! zwrite RecordsArr w !
	w !!
	zw RecordsArr
	quit $$HowManyLightsOn(.RecordsArr)
}
ComputeNextIter(RecordsArr)
{
	set Line=""
	for  {
		set Line=$order(RecordsArr(Line)) quit:Line=""
		set Record=RecordsArr(Line)
		for Pos=1:1:$length(Record) {
			set c=$extract(Record,Pos)
			set adjOn=$$HowManyAdjOn(.RecordsArr,Pos,Line)
			if c="." {
				set:adjOn=3 c="#"
			}
			else {
				if adjOn'=2,adjOn'=3 set c="."
			}
			set $extract(NewArr(Line),Pos)=c
		}
	}
	kill RecordsArr
	merge RecordsArr=NewArr
}
HowManyAdjOn(RecordsArr,X,Y)
{
	set Total=0
	for Line=Y-1:1:Y+1 {
		for Pos=X-1:1:X+1 {
			if (Line'=Y)||(Pos'=X),$extract($get(RecordsArr(Line)),Pos)="#" set Total=Total+1
		}
	}
	quit Total
}
HowManyLightsOn(RecordsArr)
{
	set Total=0
	set Line=""
	for  {
		set Line=$order(RecordsArr(Line)) quit:Line=""
		set Record=RecordsArr(Line)
		for Pos=1:1:$length(Record) {
			set c=$extract(Record,Pos)
			s:c="#" Total=Total+1
		}
	}
	quit Total
}
