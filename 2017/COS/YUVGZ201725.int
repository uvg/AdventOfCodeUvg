Part1(FileName="",RecordsArr) PUBLIC	;
{
	if $data(RecordsArr)'=10 {
		if '$length(FileName) {
			read !,"Enter filename: ",FileName
			write !
		}
		if '$length(FileName) {
			write !,"Missing file to read from"
			quit 0
		}
		quit:'$$LoadFile(FileName,.RecordsArr) 0
		if '$data(RecordsArr) {
			write !,"No data was red from "_FileName
			quit 0
		}
	}
	quit:'$$CheckData(.RecordsArr) 0
	set (Line,state,steps,instructState,value,write,dir)=""
	for  {
		set Line=$order(RecordsArr(Line)) quit:Line=""
		set Record=RecordsArr(Line)
		continue:'$length(Record)
		if Record["Begin in state " {
			set state=$piece($piece(Record," ",4),".",1)
			continue
		}
		if Record["Perform a diagnostic checksum after " {
			set steps=$piece(Record," ",6)
			continue
		}
		if Record["In state " {
			set instructState=$piece($piece(Record," ",3),":",1)
			continue
		}
		if Record["If the current value is " {
			set value=+$piece($piece(Record," ",*),":",1)
			continue
		}
		if Record["Write " {
			set write=+$piece($piece(Record," ",*),".",1)
			continue
		}
		if Record["Move " {
			set dir=$piece($piece(Record," ",*),".",1)
			continue
		}
		if Record["Continue " {
			set nextState=$piece($piece(Record," ",*),".",1)
			set arr(instructState,value)=$listbuild(write,dir,nextState)
			set (value,write,dir)=""
			continue
		}
	}
	w !,state,!,steps,!
	zw arr
	set slots=0,x=1
	for i=1:1:steps {
		set value=$extract(slots,x)
		set next=arr(state,value)
		set $extract(slots,x)=$list(next,1)
		if $list(next,2)="left" {
			set x=x-1
		}
		else {
			set x=x+1
		}
		if x<1 {
			set slots=0_slots,x=1
		}
		if x>$length(slots) {
			set slots=slots_0
		}
		set state=$list(next,3)
	}
	set ANS=$length($translate(slots,0))
	//
	//
	//
	quit ANS
}
