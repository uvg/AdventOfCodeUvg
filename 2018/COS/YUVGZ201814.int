Part2(FileName="",RecordsArr) PUBLIC
{
	if $data(RecordsArr)'=10 {
		if '$length(FileName) {
			read !,"Enter filename: ",FileName
			write !
		}
		if '$length(FileName) {
			write !,"Missing file to read from"
			quit 0
		}
		quit:'$$LoadFile(FileName,.RecordsArr) 0
		if '$data(RecordsArr) {
			write !,"No data was red from "_FileName
			quit 0
		}
	}
	quit:'$$CheckData(.RecordsArr) 0
	set MinMem=1024*1024
	set:$zstorage<MinMem $zstorage=MinMem
	set Data=RecordsArr(1),DataLen=$length(Data)
	set Elf1=1,Elf2=2,ANS=""
	set RecipesArr(1)=3,RecipesArr(2)=7,length=$order(RecipesArr(""),-1)
	for  {
		set str=""
		for i=length-DataLen-2:1:length {
			continue:i<1
			set str=str_RecipesArr(i)
		}
		if str[Data {
			set ANS=$find(str,Data)-DataLen-1+length-DataLen-2-1
			quit
		}
		set val1=RecipesArr(Elf1),val2=RecipesArr(Elf2)
		set val=val1+val2
		set dig1=val\10,dig2=val#10
		set:dig1 length=length+1,RecipesArr(length)=dig1
		set length=length+1,RecipesArr(length)=dig2
		set Elf1=(Elf1+1+val1)#length set:'Elf1 Elf1=length
		set Elf2=(Elf2+1+val2)#length set:'Elf2 Elf2=length
	}
	//
	//
	//
	quit ANS
}
CheckData(RecordsArr)
{
	if ($order(RecordsArr(""))'=1)||($order(RecordsArr(""),-1)'=1) {
		set Error="Only one line of data allowed"
		write !,Error
		quit 0
	}
	set Line="",Error=""
	for  {
		set Line=$order(RecordsArr(Line)) quit:Line=""
		set Record=RecordsArr(Line)
		if Record'?1.N {
			set Error="Wrong data format at line "_Line
			quit
		}
	}
	if $length(Error) {
		write !,Error
		quit 0
	}
	quit 1
}
LoadFile(FileName,RecordsArr)
{
	kill RecordsArr
	open FileName::.1 if '$test {
		write !,"Error loading file "_FileName
		quit 0
	}
	set EndOfFileSW=$zutil(68,40,1) //$system.Process.SetZEOF(1)
	use FileName
	for Line=1:1 {
		read Record quit:$zeof
		set RecordsArr(Line)=Record
	}
	close FileName
	if 'EndOfFileSW do $zutil(68,40,0) //$system.Process.SetZEOF(0)
	quit 1
}
