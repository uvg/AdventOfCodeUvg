Part1(FileName="",RecordsArr) PUBLIC
{
	if $data(RecordsArr)'=10 {
		if '$length(FileName) {
			read !,"Enter filename: ",FileName
			write !
		}
		if '$length(FileName) {
			write !,"Missing file to read from"
			quit 0
		}
		quit:'$$LoadFile(FileName,.RecordsArr) 0
		if '$data(RecordsArr) {
			write !,"No data was red from "_FileName
			quit 0
		}
	}
	quit:'$$CheckData(.RecordsArr) 0
	set Index=RecordsArr(1)
	set MinLength=Index+10
	set String=37
	set Elf1=1,Elf2=2
	for  {
		//w !,String,?40,Elf1,$c(9),Elf2
		quit:$length(String)>=MinLength
		set val=$extract(String,Elf1)+$extract(String,Elf2)
		set dig1=val\10,dig2=val#10
		set:dig1 String=String_dig1
		set String=String_dig2
		set Elf1=(Elf1+1+$extract(String,Elf1))#$length(String) set:'Elf1 Elf1=$length(String)
		set Elf2=(Elf2+1+$extract(String,Elf2))#$length(String) set:'Elf2 Elf2=$length(String)
	}
	set ANS=$extract(String,Index+1,Index+10)
	//
	//
	//
	quit ANS
}
