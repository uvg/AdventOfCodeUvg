Part2(FileName="",RecordsArr) PUBLIC
{
	quit $$Part1(.FileName,.RecordsArr)
}
CheckData(RecordsArr)
{
	set Line="",Error=""
	for  {
		set Line=$order(RecordsArr(Line)) quit:Line=""
		set Record=RecordsArr(Line)
		set command=$piece(Record," ",1)
		if command'="rotate",command'="rect" {
			set Error="Wrong command at line "_Line
			quit
		}
		if command="rect",$piece(Record," ",2,*)'?1.N1"x"1.N {
			set Error="Wrong rect command at line "_Line
			quit
		}
		if command="rotate",$piece(Record," ",2)'="row",$piece(Record," ",2)'="column" {
			set Error="Wrong rotate command at line "_Line
			quit
		}
		if command="rotate",$piece(Record," ",2)="row",$piece(Record," ",3,*)'?1"y="1.N1" by "1.N {
			set Error="Wrong rotate row command at line "_Line
			quit
		}
		if command="rotate",$piece(Record," ",2)="column",$piece(Record," ",3,*)'?1"x="1.N1" by "1.N {
			set Error="Wrong rotate column command at line "_Line
			quit
		}
	}
	if $length(Error) {
		write !,Error
		quit 0
	}
	quit 1
}
LoadFile(FileName,RecordsArr)
{
	kill RecordsArr
	open FileName::.1 if '$test {
		write !,"Error loading file "_FileName
		quit 0
	}
	set EndOfFileSW=$zutil(68,40,1) //$system.Process.SetZEOF(1)
	use FileName
	for Line=1:1 {
		read Record quit:$zeof
		set RecordsArr(Line)=Record
	}
	close FileName
	if 'EndOfFileSW do $zutil(68,40,0) //$system.Process.SetZEOF(0)
	quit 1
}
