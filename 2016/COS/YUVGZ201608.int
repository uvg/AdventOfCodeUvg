Part1(FileName="",RecordsArr) PUBLIC
{
	if $data(RecordsArr)'=10 {
		if '$length(FileName) {
			read !,"Enter filename: ",FileName
			write !
		}
		if '$length(FileName) {
			write !,"Missing file to read from"
			quit 0
		}
		quit:'$$LoadFile(FileName,.RecordsArr) 0
		if '$data(RecordsArr) {
			write !,"No data was red from "_FileName
			quit 0
		}
	}
	quit:'$$CheckData(.RecordsArr) 0
	set Width=50,Height=6
	do InitGrid(.Grid,Width,Height)
	do DisplayGrid(.Grid)
	set Line=""
	for  {
		w !!!
		set Line=$order(RecordsArr(Line)) quit:Line=""
		do SetGrid(.Grid,RecordsArr(Line))
		do DisplayGrid(.Grid)
	}
	//
	set ANS=$$CountLit(.Grid)
	//
	//
	//
	quit ANS
}
InitGrid(&Grid,Width,Height)
{
	set $piece(data,".",Width+1)=""
	for y=0:1:Height-1 {
		set Grid(y)=data
	}
}
DisplayGrid(&Grid)
{
	set y=""
	for  {
		set y=$order(Grid(y)) quit:y=""
		write !,Grid(y)
	}
}
SetGrid(&Grid,Instruction)
{
	set Command=$piece(Instruction," ",1)
	if Command="rect" {
		for y=0:1:$piece(Instruction,"x",2)-1 {
			for x=1:1:$piece(Instruction," ",2) {
				set $extract(Grid(y),x)="#"
			}
		}
		quit
	}
	set axis=$piece(Instruction," ",2)
	set position=+$piece(Instruction,"=",2)
	set rotation=$piece(Instruction," by ",2)
	if axis="row" {
		set str=Grid(position)
		set str=$$ROR(str,rotation)
		set Grid(position)=str
		quit
	}
	//rotate column
	set str="",y=""
	for  {
		set y=$order(Grid(y)) quit:y=""
		set str=str_$extract(Grid(y),position+1)
	}
	set str=$$ROR(str,rotation)
	for  {
		set y=$order(Grid(y)) quit:y=""
		set $extract(Grid(y),position+1)=$extract(str,y+1)
	}
}
ROR(str,rotation)
{
	set rotation=rotation#$length(str)
	quit:'rotation str
	quit $extract(str,*-rotation+1,*)_$extract(str,1,*-rotation)
}
CountLit(&Grid)
{
	set y="",Total=0
	for  {
		set y=$order(Grid(y)) quit:y=""
		set Total=Total+$length($translate(Grid(y),"."))
	}
	quit Total
}
